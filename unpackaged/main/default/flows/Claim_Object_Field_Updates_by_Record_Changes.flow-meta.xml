    <decisions>
        <description>If the CPA Indicator is changed to one of the following values</description>
        <name>If_CPA_Indicator_IsChanged</name>
        <label>If CPA Indicator IsChanged</label>
        <locationX>314</locationX>
        <locationY>335</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>CPA_Indicator</name>
            <conditionLogic>1 AND (2 OR 3 OR 4)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-out - Refused</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-out - Member not Enrolled</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-in - Reimbursement not Confirmed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_CPA_Funds_Paid_0</targetReference>
            </connector>
            <label>CPA Indicator</label>
        </rules>
        <rules>
            <name>Funds_Paid_can_t_be_changed</name>
            <conditionLogic>(1 AND 6) AND (2 OR 3 OR 4 OR 5)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.CPA_Funds_Paid__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-out - Refused</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-out - Member not Enrolled</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-in - Reimbursement not Confirmed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.CPA_Indicator__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Opt-in - Funds exhausted</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Profile.Name</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>System Administrator Full</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Opt_Out_Checkbox</targetReference>
            </connector>
            <label>Funds Paid can&#39;t be changed</label>
        </rules>
    </decisions>
